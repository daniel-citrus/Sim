{
    "name": "sim-package",
    "version": "1.0.0",
    "description": "Sim the Pencil Game",
    "main": "index.js",
    "scripts": {
        "code-css": "npm run sass-dev",
        "code-js": "webpack --watch --mode=development",
        "sass-dev": "sass --watch --update --style=expanded src/style/sass:dist/style/css",
        "sass-prod": "sass --no-source-map --style=compressed src/style/sass:dist/style/css",
        "build": "npm run sass-prod && webpack --mode=production"
    },
    "repository": {
        "type": "git",
        "url": "git+ssh://git@github.com/daniel-citrus/Sim.git"
    },
    "author": "Daniel",
    "license": "ISC",
    "bugs": {
        "url": "https://github.com/daniel-citrus/Sim/issues"
    },
    "homepage": "https://github.com/daniel-citrus/Sim#readme",
    "devDependencies": {
        "css-loader": "^6.7.3",
        "sass": "^1.62.1",
        "style-loader": "^3.3.2",
        "webpack": "^5.82.1",
        "webpack-cli": "^5.1.0"
    }
}
